@model student_Management.Models.Enrollment

@{
    ViewBag.Title = "Enrollment Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - Student Information Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 700px;
            margin: 50px auto;
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #4A90E2;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: bold;
        }

        h4 {
            color: #2b6cb0;
            text-align: center;
            margin-bottom: 25px;
            font-size: 24px;
        }

        .dl-horizontal dt {
            font-weight: bold;
            color: #4a5568;
            margin-bottom: 10px;
        }

        .dl-horizontal dd {
            margin-bottom: 20px;
            color: #2d3748;
        }

        .form-actions {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            background-color: #4A90E2;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            font-size: 16px;
            margin-right: 10px;
            width: 120px;
        }

            .btn:hover {
                background-color: #357ABD;
                transform: translateY(-3px);
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            font-size: 16px;
            width: 120px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                transform: translateY(-3px);
            }

        hr {
            border: none;
            height: 1px;
            background-color: #e2e8f0;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Enrollment Details</h2>

        <div>
            <h4>Enrollment Information</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Course.course_name)</dt>
                <dd>@Html.DisplayFor(model => model.Course.course_name)</dd>

                <dt>@Html.DisplayNameFor(model => model.Student.first_name)</dt>
                <dd>@Html.DisplayFor(model => model.Student.first_name)</dd>

                <dt>@Html.DisplayNameFor(model => model.enrollment_date)</dt>
                <dd>@Html.DisplayFor(model => model.enrollment_date)</dd>
            </dl>
        </div>

        <div class="form-actions">
            @Html.ActionLink("Edit", "Edit", new { id = Model.enrollment_id }, new { @class = "btn" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-secondary" })
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
