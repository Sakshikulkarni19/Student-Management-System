@model student_Management.Models.Grade

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - Student Information Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
           // box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #4CAF50;
            text-align: center;
            margin-bottom: 20px;
        }

        h4 {
            color: #555;
            margin-bottom: 20px;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            text-align: center;
            font-size: 24px;
        }

        dl.hori {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            font-size: 18px;
        }

        dt {
            width: 45%;
            color: #888;
            font-weight: bold;
            margin-bottom: 10px;
        }

        dd {
            width: 45%;
            margin: 0;
            color: #333;
            text-align: right;
            margin-bottom: 10px;
        }

        .form-actions {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s;
            margin: 0 10px;
        }

            .btn:hover {
                background-color: #45a049;
            }

        .btn-back {
            background-color: #333;
        }

            .btn-back:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Grade Details</h2>

        <div>
            <h4>Details Overview</h4>
            <dl class="hori">
                <dt>@Html.DisplayNameFor(model => model.Enrollment.enrollment_id)</dt>
                <dd>@Html.DisplayFor(model => model.Enrollment.enrollment_id)</dd>

                <dt>@Html.DisplayNameFor(model => model.grade1)</dt>
                <dd>@Html.DisplayFor(model => model.grade1)</dd>
            </dl>
        </div>

        <div class="form-actions">
            @Html.ActionLink("Edit", "Edit", new { id = Model.grade_id }, new { @class = "btn" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-back" })
        </div>
    </div>
</body>
</html>
