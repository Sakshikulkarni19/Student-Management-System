@model IEnumerable<student_Management.Models.Grade>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - Student Information Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #4CAF50;
            margin-top: 20px;
        }

        .container {
            height:10%;
            width: 96.5%;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            /*box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;*/
        }

        .btn {
            display: inline-block;
            margin-bottom: 20px;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #45a049;
            }

        .btn-back {
            background-color: #333;
            margin-left: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .actions {
            text-align: center;
        }

            .actions a {
                margin: 0 5px;
                color: #4CAF50;
                text-decoration: none;
            }

                .actions a:hover {
                    color: #45a049;
                }

        footer {
            text-align: center;
            padding: 10px 0;
            background-color: #333;
            color: white;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Grades Index</h2>
        <p>
            <a class="btn" href="@Url.Action("Create")"><i class="fas fa-plus"></i> Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Enrollment.enrollment_id)</th>
                    <th>@Html.DisplayNameFor(model => model.grade1)</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Enrollment.enrollment_id)</td>
                        <td>@Html.DisplayFor(modelItem => item.grade1)</td>
                        <td class="actions">
                            <a href="@Url.Action("Edit", new { id = item.grade_id })"><i class="fas fa-edit"></i> Edit</a> |
                            <a href="@Url.Action("Details", new { id = item.grade_id })"><i class="fas fa-info-circle"></i> Details</a> |
                            <a href="@Url.Action("Delete", new { id = item.grade_id })"><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a class="btn btn-back" href="@Url.Action("Index", "Default")"><i class="fas fa-arrow-left"></i> Back to Main Index</a>

    <footer>
        &copy; 2024 Student Information Management System
    </footer>
</body>
</html>