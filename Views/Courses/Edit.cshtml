@model student_Management.Models.Course

@{
    ViewBag.Title = "Course Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - Student Information Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #f4f4f9, #e2e8f0);
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 700px;
            margin: 50px auto;
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #2a4365;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 600;
        }

        h4 {
            color: #2b6cb0;
            text-align: center;
            margin-bottom: 25px;
            font-size: 24px;
            font-weight: 500;
        }

        .dl-horizontal dt {
            font-weight: bold;
            color: #4a5568;
            margin-bottom: 10px;
            transition: color 0.3s;
        }

        .dl-horizontal dd {
            margin-bottom: 20px;
            color: #2d3748;
            transition: color 0.3s;
        }

            .dl-horizontal dt:hover,
            .dl-horizontal dd:hover {
                color: #2b6cb0;
            }

        .form-actions {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            background-color: #2b6cb0;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            font-size: 16px;
            margin-right: 10px;
            width: 130px;
        }

            .btn:hover {
                background-color: #2a4365;
                transform: translateY(-3px);
            }

        .btn-secondary {
            background-color: #718096;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            font-size: 16px;
            width: 130px;
        }

            .btn-secondary:hover {
                background-color: #4a5568;
                transform: translateY(-3px);
            }

        hr {
            border: none;
            height: 1px;
            background-color: #e2e8f0;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Course Details</h2>

        <div>
            <h4>Course Information</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.course_name)</dt>
                <dd>@Html.DisplayFor(model => model.course_name)</dd>

                <dt>@Html.DisplayNameFor(model => model.course_description)</dt>
                <dd>@Html.DisplayFor(model => model.course_description)</dd>

                <dt>@Html.DisplayNameFor(model => model.credits)</dt>
                <dd>@Html.DisplayFor(model => model.credits)</dd>
            </dl>
        </div>

        <div class="form-actions">
            @Html.ActionLink("Edit", "Edit", new { id = Model.course_id }, new { @class = "btn" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-secondary" })
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
