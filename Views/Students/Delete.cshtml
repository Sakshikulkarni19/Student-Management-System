@model student_Management.Models.Student

@{
    ViewBag.Title = "Delete Student";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - Student Information Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f9fc;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #e53e3e;
            margin-bottom: 30px;
            font-size: 28px;
        }

        h3 {
            text-align: center;
            color: #2d3748;
            margin-bottom: 25px;
            font-size: 24px;
        }

        h4 {
            color: #2b6cb0;
            margin-bottom: 20px;
            font-size: 20px;
        }

        dl {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        dt {
            flex: 1 1 40%;
            font-weight: bold;
            color: #4a5568;
        }

        dd {
            flex: 1 1 60%;
            margin: 0;
            color: #718096;
        }

        hr {
            border: none;
            height: 1px;
            background-color: #e2e8f0;
            margin-bottom: 20px;
        }

        .form-actions {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            background-color: #e53e3e;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 16px;
            margin-right: 10px;
        }

            .btn:hover {
                background-color: #c53030;
            }

        .btn-default {
            background-color: #a0aec0;
        }

            .btn-default:hover {
                background-color: #718096;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #4A90E2;
                text-decoration: none;
                font-size: 16px;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Student</h2>
        <h3>Are you sure you want to delete this?</h3>

        <h4>Student Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.User.username)</dt>
            <dd>@Html.DisplayFor(model => model.User.username)</dd>

            <dt>@Html.DisplayNameFor(model => model.first_name)</dt>
            <dd>@Html.DisplayFor(model => model.first_name)</dd>

            <dt>@Html.DisplayNameFor(model => model.last_name)</dt>
            <dd>@Html.DisplayFor(model => model.last_name)</dd>

            <dt>@Html.DisplayNameFor(model => model.date_of_birth)</dt>
            <dd>@Html.DisplayFor(model => model.date_of_birth)</dd>

            <dt>@Html.DisplayNameFor(model => model.address)</dt>
            <dd>@Html.DisplayFor(model => model.address)</dd>

            <dt>@Html.DisplayNameFor(model => model.phone_number)</dt>
            <dd>@Html.DisplayFor(model => model.phone_number)</dd>

            <dt>@Html.DisplayNameFor(model => model.enrollment_date)</dt>
            <dd>@Html.DisplayFor(model => model.enrollment_date)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
